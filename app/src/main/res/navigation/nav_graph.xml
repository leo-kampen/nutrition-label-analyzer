<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home tab -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nutritionlabelapp.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

    <!-- Chat tab -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.nutritionlabelapp.ChatFragment"
        android:label="Chat" >
        <!-- ← Add this action so you can navigate to CameraFragment -->
        <action
            android:id="@+id/action_chatFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>

    <!-- Camera screen -->
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.nutritionlabelapp.CameraFragment"
        android:label="Camera" />

    <!-- More tab -->
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.nutritionlabelapp.BlankFragment"
        android:label="More" />
</navigation>
